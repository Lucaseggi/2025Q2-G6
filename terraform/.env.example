# ============================================
# Terraform Environment Variables
# ============================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control!

# Database Configuration (Sensitive)
export TF_VAR_postgres_host="10.1.4.xxx"        # Private IP of relational-db instance
export TF_VAR_postgres_port="5432"
export TF_VAR_postgres_db="simpla_rag"
export TF_VAR_postgres_user="postgres"
export TF_VAR_postgres_password="your-secure-password-here"  # CHANGE THIS!

# Vector Store Configuration (Sensitive)
export TF_VAR_vector_store_type="pinecone"      # Options: pinecone, opensearch
export TF_VAR_pinecone_api_key="your-pinecone-api-key"  # Required if using Pinecone
export TF_VAR_pinecone_index="simpla-vectors"
export TF_VAR_opensearch_host=""                # Required if using OpenSearch
export TF_VAR_opensearch_port="443"
export TF_VAR_opensearch_index="simpla-vectors"